{
  "name": "app",
  "private": "true",
  "dependencies": {
    "autoprefixer": "^10.4.13",
    "esbuild": "^0.16.10",
    "postcss": "^8.4.20",
    "tailwindcss": "^3.2.4"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/opinion.tailwind.css -o ./app/assets/builds/opinion.css --postcss"
  }
}